<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/assignTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="문제제목"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#88E4AC"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#88E4AC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/solveProblem_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:layout_margin="10dp"
                android:text=" 문제가 로딩중입니다 ^0^"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/solveSample_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:lines="14"
                android:text="보기"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAB8B7"
            android:layout_margin="20dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/selectAnswer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알맞은 답을 고르시오"
                android:layout_margin="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdobtn_one"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/rdobtn_two"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/rdobtn_three"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/rdobtn_four"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/rdobtn_five"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </RadioGroup>




            </LinearLayout>

            <TextView
                android:id="@+id/solveResult_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="채점 결과 : "
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="20dp"
                android:textColor="#531F1F"/>


        </LinearLayout>

        <Button
            android:id="@+id/gotoDiarybtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#AADFE6"
            android:text="다이어리 기록하러 가기 "
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>






</ScrollView>